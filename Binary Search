using System;

namespace BinarySearch
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] values = { 1, 2, 3, 4, 5, 6, 7, 8, 9 };
            int valueToFind = 5;
            int result = BinarySearch(values, valueToFind);
            Console.WriteLine(result);
        }

        static int BinarySearch(int[] values, int valueToFind)
        {
            int start = 0;
            int end = values.Length - 1;

            while (start <= end)
            {
                int middle = (start + end) / 2;
                if (valueToFind == values[middle])
                {
                    return middle;
                }
                else if (valueToFind < values[middle])
                {
                    end = middle - 1;
                }
                else
                {
                    start = middle + 1;
                }
            }
            return -1;
        }
    }
}
